      /* text-transform: uppercase; */


      font-family: 'Poppins', sans-serif;
    }

    a.active,
    a:hover {
      transition: .5s;
      border-radius: 5em;
    }

    a.active {
      background: #1b9bff;
    }

    .checkbtn {
      font-size: 30px;
      color: white;
      float: right;
      line-height: 80px;
      margin-right: 40px;
      cursor: pointer;
      display: none;
    }

    #check {
      display: none;
    }

    .button-nav {
      display: none;
    }

    .labell {
      margin: 0 40px 0 0;
      font-size: 26px;
      line-height: 70px;
      display: none;
      width: 35px;
      float: right;
    }

    #toggle {
      display: none;
    }

    .footer-copyright {
      text-align: center;
    }

    @media only screen and (max-width: 500px) {
      .labell {
        display: block;
        cursor: pointer;
      }

      .menuu {
        text-align: center;
        width: 100%;
        display: none;
      }

      .menuu a {
        display: block;
        border-bottom: solid #d6d6d6;
        margin: 0;
      }

      #toggle:checked+.menuu {
        display: block;
      }

      .navbar {
        display: block;
      }

      .logo {
        display: none;
      }

      body {
        padding-top: 0;
      }

      .form1 {
        width: fit-content;
      }

      .grid2 {
        display: contents;
        max-width: min-content;
        text-align: left;
        background-image: inherit;
        color: black;
        font-size: 16px;
        font-weight: bold;
      }

      .grid {
        display: inline;
      }

      .container {
        padding: 40px;
      }

      .main1 {
        display: grid;
      }

      p {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        display: inline-grid;
        width: -webkit-fill-available;

      }
