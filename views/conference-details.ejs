    label {
      display: inline-flex;
    }

    .btn {
      display: block;
    }

    p {
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .btn:hover {
      background: transparent;
      color: #0082e6;
      border: 1px solid #0082e6;
      border-color: #0082e6;
    }

    a:link {
      color: #0082e6;
    }

    .user-message {
      margin: 20px auto;
      width: 50%;
      border: 1px solid green;
      background-color: #47bb24;
